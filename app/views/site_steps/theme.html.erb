<div class='container-fluid'>
    <div class='row-fluid' id='content-wrapper'>
        <div class='span12'>
            <div class='row-fluid'>
                <div class='span12'>
                    <div class='page-header'>
                        <h1 class='pull-left'>
                            <i class='icon-edit'></i>
                            <span>创建网站四步骤</span>
                        </h1>
                        <div class='pull-right'>
                            <ul class='breadcrumb'>
                                <li>
                                    <a href="index.html"><i class='icon-bar-chart'></i>
                                    </a>
                                </li>
                                <li class='separator'>
                                    <i class='icon-angle-right'></i>
                                </li>
                                <li>
                                    站内通
                                </li>
                                <li class='separator'>
                                    <i class='icon-angle-right'></i>
                                </li>
                                <li class='active'>创建网站</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class='row-fluid'>
                <div class='span12 box'>
                    <div class='box-content box-padding'>
											<div class='fuelux'>
											    <div class='wizard'>
											        <ul class='steps'>
											            <li data-target='#step1'>
											                <span class='step'>1</span>
											            </li>
											            <li class='active' data-target='#step2'>
											                <span class='step'>2</span>
											            </li>
											            <li data-target='#step3'>
											                <span class='step'>3</span>
											            </li>
											            <li data-target='#step4'>
                                      <span class='step'>4</span>
                                  </li>
											        </ul>

											    </div>
											    <div class='step-content'>
											        <hr class='hr-normal'>

											          <div class='step-pane' id='step1'>
											            <div class="alert alert-info">网站名称一旦创建成功就不能修改</div>
											          </div>
											          <div class='step-pane active' id='step2'>
<%= render layout: 'form' do |f| %>
<div class='row-fluid'>
<div class='span12'>
<div class='gallery'>
<ul class='unstyled inline'>
<% Theme.all.each do |theme| %>
<li>
    <div class='picture' style="border: 2px solid #ccc;">
        <div class='tags'>
            <% theme.tags.split(/[ ,]+/).each do |tag| %>
                <div class='label label-'<%= rand_flag %> ><%=tag %></div>
            <% end %>
        </div>
        <div class='actions' style="background: #000; color: #fff;">
            <div class='pull-left'>
                <i class='icon-user'></i>
                <%= theme.name %>
                &nbsp;&nbsp;
                <i class='icon-share'></i>
                <%= theme.share_count %>
            </div>
            <div class='pull-right'> 
                选择<input id="site_theme_id_<%=theme.id%>" name="site[theme_id]" type="radio" value="<%= theme.id %>" <% if theme.id == @site.theme_id then%> checked="true"<% end %> >
            </div>
        </div>
        <%= image_tag  asset_path("theme/#{theme.name}.png"), :width => '400px' %>
<!--         <img alt="250x150" src="http://placehold.it/250x150" />
 -->    </div>
</li>
<% end %>
</ul>
</div>
</div></div>
											 
<% end %>
											          </div>
											          <div class='step-pane' id='step3'>
											              <div class="alert alert-info">请首先完成第二步</div>
											          </div>
											          <div class='step-pane' id='step4'>
											             <div class="alert alert-info">请首先完成第三步</div>
											          </div>
											    </div>
											</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
