<%= simple_form_for(@theme) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :tags %>
    <%= f.input :css_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-large'  %>
  </div>
<% end %>
